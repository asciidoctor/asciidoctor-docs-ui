<header class="header">
  <nav class="navbar">
    <div class="navbar-brand">
      <a class="navbar-item logo" title="1on1ミーティングガイド" href="https://1on1guide.org"><img
          src="{{{uiRootPath}}}/img/1on1guide-logo-w-border.svg" alt="1on1ガイドLogo" width="48"></a>
      <a class="navbar-item title"
        href="{{#with (and site.url site.homeUrl)}}{{{@root.site.url}}}{{{this}}}{{else}}{{{siteRootPath}}}{{/with}}">1on1ミーティングガイド</a>
      <button class="navbar-burger" aria-controls="topbar-nav" aria-expanded="false" aria-label="Toggle main menu">
        <span></span>
        <span></span>
        <span></span>
      </button>
    </div>
    <div id="topbar-nav" class="navbar-menu">
      <div class="navbar-end">
        {{#if env.SITE_SEARCH_PROVIDER}}
        <div class="navbar-item search hide-for-print">
          <div id="search" class="field">
            <input id="search-input" class="query" type="text" placeholder="Search the docs"{{#if page.home}} autofocus{{/if}}>
          </div>
        </div>
        {{/if}}

        {{#if env.ALGOLIA_API_KEY}}
        <div class="navbar-item search hide-for-print">
          {{#if (and page.component (ne page.component.name 'home') (ne page.component.name 'ROOT'))}}
          <div id="search" class="field has-filter">
            <input class="query" type="text" placeholder="Search the docs">
            <label class="filter checkbox">
              <input type="checkbox" data-facet-filter="component:{{page.component.name}}"> In this project
            </label>
          </div>
          {{else}}
          <div id="search" class="field">
            <input class="query" type="text" placeholder="Search the docs" {{#if page.home}} autofocus{{/if}}>
          </div>
          {{/if}}
        </div>
        {{/if}}
        <a class="navbar-item has-icon" href="https://github.com/1on1guide-org/1on1meeting-guide" target="_blank"
          rel="noopener">
          <span class="icon"><img src="{{{uiRootPath}}}/img/octicons-16.svg#view-mark-github"></span>
          <span>&nbsp;</span>
          <span>Source</span>
        </a>
        <div class="navbar-item has-dropdown is-hoverable">
          <div class="navbar-link has-icon">
            <span class="icon"><img src="{{{uiRootPath}}}/img/octicons-24.svg#view-comment"></span>
            <span>&nbsp;</span>
            <span>Comment</span>
          </div>
          <div class="navbar-dropdown">
            <a class="navbar-item"
              href="https://docs.google.com/forms/d/e/1FAIpQLSf9U3DEbxw7FtOQE75k1BLlF5jh_jQ3fedNFDwhWDbygpWdmw/viewform"
              target="_blank" rel="noopener">Feedback <small>Google form</small></a>
            <a class="navbar-item" href="https://github.com/1on1guide-org/1on1meeting-guide/issues" target="_blank"
              rel="noopener">Issues <small>GitHub</small></a>
          </div>
        </div>
        <div class="navbar-item has-icon">
          <span class="control">
            <a class="button is-primary" href="https://files.1on1guide.org/pdf/1on1meeting-guide.pdf" target="_blank" rel="noopener">
              <span class="icon"><img src="{{{uiRootPath}}}/img/octicons-24.svg#view-file"></span>
              <span>&nbsp;</span>
              <span>PDF</span>
            </a>
          </span>
        </div>
      </div>
    </div>
  </nav>
</header>