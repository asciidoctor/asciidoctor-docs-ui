<header class="header">
  <nav class="navbar">
    <div class="navbar-brand">
      <a class="navbar-item logo" title="Asciidoctor" href="https://asciidoctor.org"><img src="{{{uiRootPath}}}/img/asciidoctor-logo.svg" alt="Asciidoctor" width="48"></a>
      <a class="navbar-item title" href="{{#with (and site.url site.homeUrl)}}{{{@root.site.url}}}{{{this}}}{{else}}{{{siteRootPath}}}{{/with}}">{{site.title}}</a>
      <button class="navbar-burger" data-target="topbar-nav">
        <span></span>
        <span></span>
        <span></span>
      </button>
    </div>
    <div id="topbar-nav" class="navbar-menu">
      <div class="navbar-end">
        {{#if env.ALGOLIA_API_KEY}}
        <div class="navbar-item search hide-for-print">
          {{#if (and page.component (ne page.component.name 'home'))}}
          <div id="search" class="field has-filter">
            <input class="query" type="text" placeholder="Search the docs">
            <label class="filter checkbox">
              <input type="checkbox" data-facet-filter="component:{{page.component.name}}"> In this project
            </label>
          </div>
          {{else}}
          <div id="search" class="field">
            <input class="query" type="text" placeholder="Search the docs"{{#if page.home}} autofocus{{/if}}>
          </div>
          {{/if}}
        </div>
        {{/if}}
        <div class="navbar-item has-dropdown is-hoverable">
          <div class="navbar-link">AsciiDoc</div>
          <div class="navbar-dropdown">
            <a class="navbar-item" href="{{{relativize (resolvePageURL 'asciidoc::index.adoc')}}}">Language</a>
            <a class="navbar-item" href="{{{relativize (resolvePageURL 'asciidoc::syntax-quick-reference.adoc')}}}">Syntax Quick Reference</a>
          </div>
        </div>
        <div class="navbar-item has-dropdown is-hoverable">
          <div class="navbar-link">Processing</div>
          <div class="navbar-dropdown">
            <a class="navbar-item" href="{{{relativize (resolvePageURL 'asciidoctor::index.adoc')}}}">Asciidoctor <small>Ruby</small></a>
            <a class="navbar-item" href="{{{relativize (resolvePageURL 'asciidoctor.js::index.adoc')}}}">Asciidoctor.js <small>JavaScript</small></a>
            <a class="navbar-item" href="{{{relativize (resolvePageURL 'asciidoctorj::index.adoc')}}}">AsciidoctorJ <small>Java</small></a>
          </div>
        </div>
        <div class="navbar-item has-dropdown is-hoverable">
          <div class="navbar-link">Extensions</div>
          <div class="navbar-dropdown">
            <div class="navbar-item">Add-on Converters</div>
            {{!--
            <a class="navbar-item" href="{{{relativize (resolvePageURL 'pdf-converter::index.adoc')}}}">PDF</a>
            <a class="navbar-item" href="{{{relativize (resolvePageURL 'epub3-converter::index.adoc')}}}">EPUB3</a>
            --}}
            <a class="navbar-item" href="{{{relativize (resolvePageURL 'reveal.js-converter::index.adoc')}}}">reveal.js <small>Ruby, JavaScript</small></a>
            <hr class="navbar-divider">
            <div class="navbar-item">Extended Syntax</div>
            {{#with (resolvePageURL 'diagram-extension::index.adoc')}}
            <a class="navbar-item" href="{{{relativize this}}}">Asciidoctor Diagram <small>Ruby</small></a>
            {{/with}}
            {{!--
            {{#with (resolvePageURL 'kroki-extension::index.adoc')}}
            <a class="navbar-item" href="{{{relativize this}}}">Asciidoctor Kroki <small>JavaScript</small></a>
            {{/with}}
            <a class="navbar-item" href="#">Asciidoctor Chart</a>
            <a class="navbar-item" href="#">Asciidoctor bibtex</a>
            <div class="navbar-item">Feature Adapters</div>
            <a class="navbar-item" href="#">Asciidoctor Mathematical <small>stem</small></a>
            <a class="navbar-item" href="#">Asciidoctor Prism <small>source highlighter</small></a>
            --}}
          </div>
        </div>
        <div class="navbar-item has-dropdown is-hoverable">
          <div class="navbar-link">Tooling</div>
          <div class="navbar-dropdown is-right">
            <div class="navbar-item">Build Automation</div>
            {{#with (resolvePageURL 'maven-tools::index.adoc')}}
            <a class="navbar-item" href="{{{relativize this}}}">Maven Tools <small>Java</small></a>
            {{/with}}
            {{!--
            <a class="navbar-item" href="https://asciidoctor.github.io/asciidoctor-gradle-plugin" target="_blank" rel="noopener">Gradle Plugin <small>Java</small></a>
            --}}
            {{#with (resolvePageURL 'asciidoclet::index.adoc')}}
            <a class="navbar-item" href="{{{relativize this}}}">Asciidoclet <small>Java</small></a>
            {{/with}}
            <hr class="navbar-divider">
            <div class="navbar-item">Text Editors / Viewers</div>
            {{!--
            <a class="navbar-item" href="#">Browser Extension</a>
            <a class="navbar-item" href="#">Atom Add-ons</a>
            --}}
            <a class="navbar-item" href="https://intellij-asciidoc-plugin.ahus1.de/docs" target="_blank" rel="noopener">IntelliJ Plugin</a>
          </div>
        </div>
        <a class="navbar-item" href="https://github.com/asciidoctor" target="_blank" rel="noopener">
          <span class="icon"><img src="{{{uiRootPath}}}/img/octicons-16.svg#view-mark-github"></span>
        </a>
      </div>
    </div>
  </nav>
</header>
